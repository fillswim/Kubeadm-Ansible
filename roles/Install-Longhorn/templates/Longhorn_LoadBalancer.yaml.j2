---
apiVersion: v1
kind: Service

metadata:
  labels:
    app: longhorn-ui
  name: longhorn-frontend-lb
  namespace: {{ longhorn_namespace }}
spec:
  type: LoadBalancer
  loadBalancerIP: {{ longhorn_loadbalancer_ip }}
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: http
  selector:
    app: longhorn-ui
  sessionAffinity: None
